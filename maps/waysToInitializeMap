package main

import "fmt"

func main() {
	// Maps smilar to objects in Javascript a key- value pair, in the code below it states that the key and the value are strings.
	// have to use brackets to access keys in map, no dot notation
	// #1
	colors := map[string]string{
		"red":   "#ff0000",
		"green": "#00ff00",
		"white": "#ffffff",
	}
 fmt.Println(colors)
	// #2
 var colors map[string]string

	// #3
	colors := make(map[string]string)

	colors["white"] = "#ffffff"

    fmt.Println(colors)

	delete(colors, "white")

	fmt.Println(colors)
}
